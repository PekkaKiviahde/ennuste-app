{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@ennuste/application/*": [
        "../../packages/application/src/*"
      ],
      "@ennuste/domain/*": [
        "../../packages/domain/src/*"
      ],
      "@ennuste/infrastructure/*": [
        "../../packages/infrastructure/src/*"
      ],
      "@ennuste/shared/*": [
        "../../packages/shared/src/*"
      ]
    },
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
